<view class="J-shopping-cart-empty"  hidden="{{iscart}}" >
   <view class="shopping-cart-empty">
        <view class="bg"></view> 
        <view class="cart"></view>
        <text class='empty-text'>购物车空空如也</text>  
        <p></p>
        <navigator url="../content/content">
         <a href="//m.vip.com" class="button button-primary">去抢购</a>
        </navigator>
    </view>
</view>

<!--购物车商品列表   hidden="{{hidden}}"-->
<view class="details_content" hidden="{{hidden}}" wx:for="{{details}}" wx:key="id" data-index="{{index}}">
          <!--选择按钮-->
      <view  wx:if="{{!item.isSelect}}">
            <icon class="item-select" bindtap="switchSelect" data-index="{{index}}" data-id="{{index}}"  type="circle" size="20"></icon>
      </view>
      <view wx:elif="{{item.isSelect}}">
            <icon class="item-select" bindtap="switchSelect" data-index="{{index}}" data-id="{{index}}"  type="success" color="#f0145a" size="20"></icon>
      </view>
      <image class="details_content_img" src="{{item.image}}"></image>
      <view class="details_content_message">
          <!--商品名-->
           <view class="name">
                <text class="details_content_name"> 商品名：{{item.name}}</text>
           </view>
           <!--商品价格-->
           <view class="money">
                 <text class="details_content_money">价格：￥{{item.price}}</text>
           </view>
            <!--商品数量-->
           <view class="xuanzhe">
              <view class="shuliang"> 数量：</view>
                  <!--del-->
              <text bindtap="delClick" data-index="{{index}}">-</text>
              <!--disabled='disabled'  input 只读-->
                  <!--num-->
              <input class="shuliang_inp" disabled='disabled'  value="{{item.num}}"></input>
                  <!--add-->
              <text bindtap="addClick" data-index="{{index}}">+</text>
           </view>
       </view>
           <!--删除图标-->
       <view class="delimg">
           <image src="../../image/del.png"/>
       </view>
</view>
<!--底部-->
<view class="bottom_total" hidden="{{hidden}}">
  <view class="bottom_line"></view>
  <view class="row">
      <!--全选按钮-->
     <view  wx:if="{{!isAllSelect}}">
         <icon class="item-allselect" bindtap="allSelect" type="circle" size="20"></icon>
     </view>
     <view wx:elif="{{isAllSelect}}">
        <icon class="item-allselect" bindtap="allSelect" type="success" color="#f0145a" size="20"></icon>
     </view>
     <text class="small_text">全选</text>
    <text>合计:￥ </text>
    <text class="price">{{totalMoney}}</text>
    <text class="button-red" bindtap="toBuy" formType="submit">去结算</text>
 </view>
</view>