.box .title {
  display: flex;
  text-align: center;
}
.box .title .onloading {
  margin: 10rpx 10rpx;
  flex: 1;
}
.box .title .is_black {
  border-bottom: 1px solid #e1e1e1;
}
.box .title .on_item {
  border-bottom: 1px solid #46c47d;
}
.box .title .onloaded {
  margin: 10rpx 10rpx;
  flex: 1;
}
.box .item {
  position: relative;
  margin-top: 20rpx;
  width: 750rpx;
}
.box .item .order-info {
  position: relative;
  margin: 20rpx;
  font-size: 30rpx;
}
.box .item .order-info .order-package {
  margin-bottom: 10rpx;
}
.box .item .order-info .order-num .order-status {
  color: #46c47d;
  float: right;
}
.box .item .order-info .order-date {
  padding: 20rpx 0;
}
.box .item .order-info .infomation {
  display: flex;
  border-top: 1px solid #e1e1e1;
}
.box .item .order-info .infomation .img {
  width: 40%;
  height: 210rpx;
  margin: 20rpx 0;
  flex: 1;
}
.box .item .order-info .infomation .img image {
  width: 100%;
  height: 100%;
}
.box .item .order-info .infomation .right {
  margin: 0 20rpx;
  flex: 1;
}
.box .item .order-info .infomation .right .name {
  margin: 20rpx 0;
}
.box .item .order-info .infomation .right .price {
  margin: 20rpx 0;
  color: red;
}
.box .item .order-info .infomation .right .count {
  color: #999;
}
.box .item .order-info .infomation .right .back {
  text-align: right;
  position: relative;
}
.box .item .order-info .infomation .right .back text {
  position: relative;
  right: 2%;
  bottom: 0%;
  border-radius: 20rpx;
  text-align: center;
  display: inline-block;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #999;
  color: #999;
}
.box .item .order-info .show_both {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border: 1px solid #e1e1e1;
  background-color: #f4f4f4;
  border-radius: 20rpx;
}
.box .item .order-info .payfor {
  width: 100%;
  height: 100rpx;
  background: white;
  margin: 20rpx 10rpx;
  display: flex;
}
.box .item .order-info .payfor .payfor_count {
  text-align: right;
  height: 60rpx;
  line-height: 60rpx;
  flex: 2;
  margin: 15rpx;
}
.box .item .order-info .payfor .payfor_count .pat_total {
  font-weight: bold;
}
.box .item .order-info .payfor .payfor_count .red {
  color: #f40;
}
.box .item .order-info .payfor .submit {
  height: 60rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 60rpx;
  margin: 15rpx;
  flex: 1;
}
.box .item .order-info .payfor .else {
  background-color: #f40;
  color: white;
}
.box .item .order-info .payfor .one {
  background-color: #e1e1e1;
}
